@import "./mainStyles.styl"
@import "./buttonStyles.styl"

header
	width: 100%
	height: 60px

	display: none
	grid-template-columns: 2fr 2fr 1fr
	
	padding: 0 50px

	background-color: $mediumBackground

	img
		width: 200px
		height: auto

		margin: auto 0

	nav
		ul
			display: flex
			justify-content: space-evenly

			height: 60px

			li
				align-self: center
				list-style: none

				a
					display: inline-block
					height: 60px
					line-height: 60px

					text-decoration: none
					color: $textColor
					font-size: 1.8rem
			
				a:hover
					color: $secondaryOne
					border-bottom: 3px solid $secondaryOne

	button:hover
		box-shadow: 0px 2px 7px 2px rgba(0, 0, 0, 0.2);
		color: $secondaryThree