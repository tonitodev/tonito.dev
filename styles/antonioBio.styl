@import "./mainStyles.styl"

.bioPortrait
    
    img
        height: 50vh
        width: 100vw
        object-fit: cover
        object-position: center

.bio
    display: grid
    grid-template-columns: 1fr
    gap: 50px

    padding: 100px 7% 0 7%

    .bioText
        p
            margin-top: 10px
            font-size: 1.8 rem
            line-height: 175%

@media (min-width: 1000px)
    .bio
        grid-template-columns: 1fr 1fr