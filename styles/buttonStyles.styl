@import "./mainStyles.styl"

button
	width: 150px
	height: 35px

	margin: auto auto

	border-radius: 8px
	border: 0px
	background-color: $mainColor

	box-shadow: 0px 2px 7px 2px rgba(0, 0, 0, 0.1);
	color: $mainWhite

	cursor: pointer

button:hover
	box-shadow: 0px 2px 7px 2px rgba(0, 0, 0, 0.2);
	color: $mediumBackground
		