$font1 = 'Lora', serif
$font2 = 'League Spartan', sans-serif

$mainColor = #466D83
$mainAlternativeColor = #8AB683
$secondaryOne = #48787D
$secondaryTwo = #BBC731
$secondaryThree = #FDBA0D
$secondaryFour = #ED5D30

$textColor = #505D6D
$textColor_light = #E9ECE3

$lightBackground = #E9ECE3
$mediumBackground = #E0E1D8
$darkBackground = #3A4853

$mainBlack = #1B272E
$mainWhite = #F4F4F4

$positiveBoolean = #B3F86F
$negativeBoolean = #EFA087

*
	box-sizing: border-box
	margin: 0
	padding: 0

html
	font-size: 62.5%
	font-family: $font2

	background-color: $lightBackground

/* Header styles functions - only size */

h1, h2, h3

	font-family: $font1
	font-weight: 700

	color: $mainColor
	letter-spacing: 0.05em
	line-height: 135%

h1
	font-size: 2.4rem
h2
	font-size: 2.1rem
h3
	font-size: 1.8rem

.--specialHeader
	font-size: 3.6rem
	font-weight: 700

	letter-spacing: 0.05em
	line-height: 150%

	margin-bottom: 30px

/* Paragraph's styles */

p
	line-height: 120%
	letter-spacing: 0.03em
	color: $textColor
	margin-top: 12px

.--mainParagraph, .--mainParagraph > p, .bookIntroduction > p
	font-size: 1.8 rem
	line-height: 120%

.--secondaryParagraph
	font-size: 1.4rem

.--notesParagraph
	font-size: 1.1rem

/*Other elements*/

button, a
	font-family: $font2
	font-size: 1.8rem
	letter-spacing: 0.03em

ul, ol, li
	font-size: 1.8rem
	color: $textColor
	list-style none

li
	line-height: 150%


a
	line-height: 150%
	letter-spacing: 0.04em
	text-decoration: underline
	color: $secondaryTwo

.__verticalSpace
	margin-top: 30px
